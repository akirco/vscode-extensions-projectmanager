{
  "name": "pm",
  "displayName": "pm",
  "description": "A simple way to manage local project files.",
  "version": "0.1.5",
  "publisher": "akirco",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "repository": {
    "url": "https://github.com/akirco/vscode-extensions-projectmanager.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pm.newProject",
        "title": "New Project",
        "category": "pm"
      },
      {
        "command": "pm.openProject",
        "title": "Open Project",
        "category": "pm"
      },
      {
        "command": "pm.deleteProject",
        "title": "Delete Project",
        "category": "pm"
      },
      {
        "command": "pm.quickOpenProject",
        "title": "Quick Opening Project",
        "category": "pm"
      },
      {
        "command": "pm.cloneRepository",
        "title": "Clone Remote Repository",
        "category": "pm"
      },
      {
        "command": "pm.deleteDependencies",
        "title": "Delete Project Dependencies",
        "category": "pm"
      },
      {
        "command": "pm.openWorkspace",
        "title": "Create And Open Workspace",
        "category": "pm"
      },
      {
        "command": "pm.quickOpenWorkspace",
        "title": "Quick Open Workspace",
        "category": "pm"
      },
      {
        "command": "pm.closeWorkspaceOrFolder",
        "title": "Close Workspace Or Folder",
        "category": "pm"
      }
    ],
    "configuration": [
      {
        "title": "ProjectManager",
        "properties": {
          "ProjectManager.root": {
            "type": "string",
            "default": "",
            "description": "The root folder of the projects"
          },
          "ProjectManager.category": {
            "type": "string",
            "description": "The categories of the projects",
            "default": ""
          },
          "ProjectManager.scaffolds": {
            "type": "object",
            "description": "Default scaffolds to create project",
            "default": {}
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "get-folder-size": "^5.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "~20.2.5",
    "@types/vscode": "^1.78.1",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.42.0",
    "fast-glob": "^3.3.3",
    "glob": "^10.2.7",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4"
  }
}
